<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hisedu.project.keshi.mapper.TabKeshiMapper">
    
    <resultMap type="TabKeshi" id="TabKeshiResult">
        <result property="id"       column="id"       />
        <result property="ksname"    column="ksname"    />
        <result property="orders"     column="orders"     />
        <result property="status"  column="status"  />
    </resultMap>
    
    <sql id="selectTabKeshiVo">
        select id,ksname,orders,status from tab_keshi
    </sql>
    
    
    <select id="selectTabKeshiById" parameterType="Long" resultMap="TabKeshiResult">
        <include refid="selectTabKeshiVo"/>
		where id=#{id}
    </select>
    
    
    <select id="selectTabKeshiList" parameterType="TabKeshi" resultMap="TabKeshiResult">
        <include refid="selectTabKeshiVo"/>
        <where>
			<if test="ksname != null and ksname != ''">
				AND ksname like concat('%', #{ksname}, '%')
			</if>
			<if test="status != null and status != ''">
				AND status = #{status}
			</if>
		</where>
		order by orders asc
    </select>
    
    
    <insert id="insertTabKeshi" parameterType="TabKeshi" useGeneratedKeys="true" keyProperty="id">
        insert into tab_keshi
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="ksname != null">ksname,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="orders != null and orders != ''">orders,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="ksname != null">#{ksname},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="orders != null and orders != ''">#{orders},</if>
         </trim>
    </insert>
    
    
    <update id="updateTabKeshi" parameterType="TabKeshi">
        update tab_keshi
        <trim prefix="SET" suffixOverrides=",">
            <if test="ksname != null">ksname = #{ksname},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="orders != null and orders != ''">orders = #{orders},</if>
        </trim>
        where id = #{id}
    </update>
    
    
    <delete id="deleteTabKeshiById" parameterType="Long">
        delete from tab_keshi where id = #{id}
    </delete>
    
</mapper>